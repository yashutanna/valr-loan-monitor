# VALR API Configuration
VALR_API_KEY=your_api_key_here
VALR_API_SECRET=your_api_secret_here

# Subaccount Configuration
LOAN_PRINCIPAL_SUBACCOUNT=your_principal_subaccount_id

# Monitoring Configuration
POLL_INTERVAL_MS=3600000
PORT=3000

# Data directory for database files (defaults to ./data for local dev, /app/data for Docker)
# DATA_DIR=./data

# Payment Tracking Configuration
# Comma-separated list of transfer IDs to ignore when calculating payments
# (e.g., initial collateral deposits before loan started)
PAYMENT_IGNORE_TRANSFER_IDS=

# Repayment System Configuration (Optional)
# Set to 'true' to enable automated loan repayment system
REPAYMENT_ENABLED=false

# Subaccount that holds ZAR for repayments
# Required if REPAYMENT_ENABLED=true
REPAYMENT_SUBACCOUNT=

# Optional: Separate API keys for repayment subaccount
# If not provided, will use the main VALR_API_KEY and VALR_API_SECRET
REPAYMENT_API_KEY=
REPAYMENT_API_SECRET=

# Dry-run mode: logs actions without executing real trades/transfers
# Set to 'true' for testing, 'false' for live execution
DRY_RUN=true

# Minimum ZAR balance to keep in reserve (won't be used for repayments)
MINIMUM_ZAR_RESERVE=100

# Path to Friends & Family loans configuration JSON file
# Copy config/friends-family-loans.json.example to config/friends-family-loans.json and customize
FRIENDS_FAMILY_LOANS_PATH=./config/friends-family-loans.json