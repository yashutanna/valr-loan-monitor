{
  "name": "valr-loan-monitor",
  "version": "1.0.0",
  "description": "Monitor VALR crypto loan interest and margin status",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:logs:monitor": "docker compose logs -f loan-monitor",
    "docker:logs:grafana": "docker compose logs -f grafana",
    "docker:logs:prometheus": "docker compose logs -f prometheus",
    "docker:status": "docker compose ps",
    "docker:build": "docker compose build",
    "docker:rebuild": "docker compose build && docker compose up -d",
    "docker:reload": "docker compose up -d",
    "docker:reload:monitor": "docker compose up -d loan-monitor",
    "docker:reload:grafana": "docker compose up -d grafana",
    "docker:reload:prometheus": "docker compose up -d prometheus",
    "docker:clean": "docker compose down -v"
  },
  "keywords": ["valr", "crypto", "loan", "monitoring", "prometheus"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "1.13.2",
    "prom-client": "15.1.3",
    "express": "5.2.1",
    "dotenv": "16.4.7",
    "better-sqlite3": "11.8.1",
    "valr-typescript-client": "1.0.8"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/better-sqlite3": "^7.6.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14"
  }
}